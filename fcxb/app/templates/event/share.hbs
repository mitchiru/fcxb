<div class="navbar navbar-info">
    <div class="navbar-header">
        {{#link-to 'event.item' model.id class="navbar-brand navbar-left"}}
        <i class="mdi-navigation-arrow-back"></i>
        <div class="ripple-wrapper"></div>
        {{/link-to}}
        <span class="navbar-brand navbar-left ellipsis">{{model.name}}</span>
    </div>
</div>
<div class="event-detail">
<div class="well"  {{bind-attr data-canceled=model.canceled}}>
<div class="list-group">
    <div class="list-group-item list-group-item-heading">
        {{#if isEditingName}}
        {{input value=bufferedName escape-press='cancelEditingName' focus-out='doneEditingName' insert-newline='doneEditingName' placeholder="Name" class="form-control input-heading" autocomplete="off"}}
        {{else}}
        <h2  {{action 'startEditingName'}}>{{model.name}}</h2>
        {{/if}}
        <div class="list-group-left"><p class="list-group-bellowheading"><small>{{model.evdate_str}}</small></p></div>
        <div class="list-group-right"><p class="list-group-bellowheading"><small>{{model.evdate_dif}}</small></p></div>
    </div>
    <div class="detail-counter">
        <h3><center>{{model.registrations.length}}
            {{#if isEditingMax}}
                        <span class="h3mini">/
                            {{input id="inputMax" type="number" value=bufferedMax escape-press='cancelEditingMax' focus-out='doneEditingMax' insert-newline='doneEditingMax' placeholder="16" class="form-control" autocomplete="off"}}
                        </span>
            {{else}}
            <span class="h3mini" {{action 'startEditingMax'}}>/{{model.max_att}}</span>
            {{/if}}
        </center></h3>
    </div>
    <div class="progress">
        <div {{bind-attr class=model.bar_color style=model.bar_width}}></div>
        <div class="progress-bar progress-bar-danger" {{bind-attr style=model.overbooked_with}}></div>
    </div>
    </div>
</div>

<form class="form-horizontal form-naked">
    <fieldset>
    <div class="form-group">
        <label for="input-copy" class="col-lg-2 control-label">Copy Link</label>
        <div class="col-lg-10">
            <div class="input-group">
                {{input id="input-copy" focus-in="selectAll" value=model.link class="form-control"}}
                <span class="input-group-addon"><i class="mdi-content-content-copy"></i></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="input-copy" class="col-lg-2 control-label">Copy Address</label>
        <div class="col-lg-10">
            <div class="input-group">
                {{input id="input-copy-location" focus-in="selectAllLocation" insert-newline='doneEditingLocation' value=model.location class="form-control"}}
                <span class="input-group-addon"><i class="mdi-maps-pin-drop"></i></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="input-copy" class="col-lg-2 control-label">Copy Link to Google Maps</label>
        <div class="col-lg-10">
            <div class="input-group">
                {{input id="input-copy-mapsLink" focus-in="selectAllMapsLink" value=model.google_maps_link class="form-control"}}
                <span class="input-group-addon"><i class="mdi-maps-pin-drop"></i></span>
            </div>
        </div>
    </div>
    <br><br><br><br><br>
    </fieldset>
</form>
</div>
{{outlet}}